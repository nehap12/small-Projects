<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
  <title>My Shopping Cart</title>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">

   <!--Scripts-->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.4/angular-material.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular-animate.min.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular-aria.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular-route.js"></script>

   <!--Angular Custom Files-->
   <script src="script.js"></script>
   <script src="js/controllers/MainController.js"></script>
   <script src="js/services/MainService.js"></script>

   <!--Stylesheets-->
   <link rel="stylesheet" href="./stylesheets/style.css">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.4/angular-material.css">


</head>
<body ng-controller="MainController">
<!--Header -->
<md-toolbar>
 <div class="md-toolbar-tools">
  <p><strong>Shopping Cart</strong></p>
  <md-button ng-click="openSidebar()">
   <md-icon class="mdi mdi-plus-circle"></md-icon>
   Add New Product
  </md-button>

  <span flex></span>


  <md-button ng-click="">
   Cart
  </md-button>
  <md-button ng-click="">
   Checkout
  </md-button>
  <md-button ng-href="/logout">
   Logout
  </md-button>
  <!--<a href="/logout" class="btn btn-primary">Logout</a>-->
 </div>
</md-toolbar>

<!--Side bar for adding a new product-->

<md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left">
 <md-toolbar>
  <h1 class="md-toolbar-tools">Enter all the fields below: </h1>
 </md-toolbar>

 <md-content layout-padding>
  <form>
   <md-input-container>
    <label for="title">Title</label>
    <input type="text" id="title"
           ng-model="product.title" md-autofocus>
   </md-input-container>
   <md-input-container>
    <label for="price">Price</label>
    <input type="text" id="price"
           ng-model="product.price">
   </md-input-container>
   <md-input-container>
    <label for="description">Description</label>
    <textarea type="text" id="description"
              ng-model="product.description">
    </textarea>
   </md-input-container>
   <md-input-container>
    <label for="quantity">Quantity</label>
    <textarea type="text" id="quantity"
              ng-model="product.qty">
    </textarea>
   </md-input-container>
  <!-- <md-input-container>
    <label for="image">Image Link</label>
    <input type="text" id="image"
           ng-model="product.image">
   </md-input-container>-->
   <br>
   <md-button ng-click="addProduct(product)" class="md-primary">
    Add
   </md-button>
   <md-button ng-click="closeSidebar()" class="md-warn">
    Cancel
   </md-button>
  </form>
 </md-content>
</md-sidenav>


<md-content class="md-padding" layout="row" layout-wrap>
 <md-card flex="30" ng-repeat="product in products">
  <img ng-src="./img/dummyProduct.jpg">
  <md-card-content>
   <div class="product-info" ng-show="!showContact">
    <h2 class="md-title">{{ product.title }}</h2>
    <h3>{{ product.price | currency }}</h3>
    <p>{{ product.description }}</p>
    <h2>{{ product.qty }}</h2>
   </div>
    <md-button ng-click="showAdmin = true" ng-hide="showAdmin">Admin</md-button>
    <md-button ng-click="showAdmin = false" ng-hide="!showAdmin">Close</md-button>
   </div>
   <div class="product-admin" ng-if="showAdmin">
    <h3>Admin</h3>
    <div layout="row">
     <md-button class="md-primary">Edit</md-button>
     <md-button class="md-warn">Delete</md-button>
    </div>
   </div>
  </md-card-content>
 </md-card>
</md-content>




</body>

</html>
